// Navigational header section html template (Meteor Jade with Spacebars) 

template(name='nav')
  // Header section //
  .navbar.navbar-default.navbar-fixed-top(role='navigation')
    br
    
    // Space above menu for sign-in tools and logo
    #sign-in-tools.container-fluid
      .row
      
        // logo
        #nav-logo.col-xs-3.col-md-2
          img.img-rounded.pull-right(src="img/logotype.png", alt='Company logo')
          
        // Empty space
        #left-nav-space.col-xs-9.col-md-7
          h2.text-center
            | {{company}}
            // year from db instead
            small  Work Environment Web Poll {{year}}
            
        // Sign-in and language tools
        #signin-language.col-xs-2.col-md-1
          .btn-group.navbar-right
            button.btn.btn-default.btn-xs.dropdown-toggle(type='button', data-toggle='dropdown')
              | Language / SprÃ¥k:
              span.caret
            ul.dropdown-menu(role='menu')
              li
                a(href='#') English
              li
                a(href='#') Svenska
          .btn-group
            span.navbar-right {{> loginButtons align="right"}}
        #right-nav-space.col-xs-3.col-md-2
        
        
    // Navigational items //
    .container-fluid.gradient
    
      // Space
      #navbar-space.col-xs-2.col-md-1
      
      // Responsive navigation and logo
      .navbar-header.menu-uppercase
        button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href='{{pathFor coreRoute}}')
          b {{projectName}}
          
      // Menu Items    
      .navbar-collapse.collapse.menu-uppercase
        ul.nav.navbar-nav.nav-tabs.navbar-left
            
          each menu.menuItems
            li
              a(href='{{pathFor route}}')
                b {{getText label}}

